{{> layout_top}}


<div class="container-fluid">

    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800"></h1>

    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Tambah</h6>
        </div>
        <div class="card-body">

            <div class="row mb-4">
                <div class="col-8">
                    <a href="user" class="btn btn-sm btn-warning"><i class="fa fa-chevron-left"></i> Kembali</a>
                </div>
            </div>

            <form role="form"  action="#" method="post" id="formData" enctype="multipart/form-data" class="form-horizontal">

                <div class="pl-lg-4">
                    <div class="row">
                        <div class="col-md-8">
                            <div class="form-group focused">
                                <label class="form-control-label" >Nama</label>
                                <input type="text" name="nama" class="form-control form-control-alternative" placeholder="contoh : Abdullah"  required autocomplete="off">
                            </div>
                            <div class="form-group focused">
                                <label class="form-control-label" >Email</label>
                                <input type="email" name="email" class="form-control form-control-alternative" placeholder="contoh : abd@mail.com" autocomplete="off" required>
                            </div>
                            <div class="form-group focused">
                                <label class="form-control-label" >Password</label>
                                <input type="password" name="password" class="form-control form-control-alternative" placeholder="contoh : QweRty012#" autocomplete="off" required>
                            </div>
                            <div class="form-group focused">
                                <label class="form-control-label" >Password Confirmasi</label>
                                <input type="password" name="passwordconf" class="form-control form-control-alternative" placeholder="contoh : QweRty012#" autocomplete="off" required>
                            </div>

                        </div>

                        <div class="col-md-4">
                            <div class="form-group focused">
                                <label class="form-control-label" >Image</label>
                                <div class="custom-file">
                                    <input type="file" name="image" class="custom-file-input form-control form-control-alternative" id="image" lang="id" accept="image/*">
                                    <label class="custom-file-label" for="image">Image</label>
                                </div>
                                <img src="" class="col-lg-12 img-200" id="temp-image">
                            </div>
                        </div>
                    </div>
                </div>

                <hr class="my-4">
                <div class="pl-lg-4">
                    <div class="row">
                        <div class="col-md-12">
                            <button type="submit" class="btn btn-primary btn-sm" id="submit"><i class="fa fa-save"></i> Simpan</button>
                        </div>
                    </div>                  
                </div>
            </form>
        </div>
    </div>

</div>
{{> layout_bottom}}

